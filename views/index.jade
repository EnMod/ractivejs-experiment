extends _layout

block content
	header
		h1 IGAvania Sorter
	section
		nav
			ul
				li info1
				li info2
				li info3
				li info4
				li info5
		main
			ul.heroes-list
				{{#each heroes:id}}
				li(data-index='{{id}}')
					a.hero-photo(href='#')
						img(src='{{image.small}}', height='130', alt='{{name}}')
					h2
						a(href='#') {{name}} 
					ul.hero-description
						li
							span Age: 
							{{age}}
						li
							span Theme: 
							{{info.theme}}
						li
							span Main Weapons: 
							{{info.main-weapons}}
						li
							span Sub Weapons: 
							{{info.sub-weapons}}
						li
							span Dracula Defeats: 
							{{info.dracula-defeats}}
						li
							span Canon Appearances: 
							{{info.canon-appearances}}
					p.badassness {{badassness}}/5
					.highlight
				{{/each}}
	footer