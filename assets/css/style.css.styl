@import '_settings'

// ~~~~~~~~~
// ~ Setup ~
// ~~~~~~~~~

normalize-css()
typographic()

// ~~~~~~~~~~~~~~~
// ~ Main Styles ~
// ~~~~~~~~~~~~~~~

heroes = 8
columns = 4

html
	-webkit-margin-before 0
	-webkit-margin-after 0

h1, h2, h3, h4, h5, h6, p
	-webkit-margin-before 0
	-webkit-margin-after 0

section
	lost-utility clearfix
	// Want your site to be centered and have some nice side gutters? Uncomment below:
	// lost-center 1140px

.heroes-list > li
	lost-column 1/columns

.heroes-list li
	list-style none

	

		
